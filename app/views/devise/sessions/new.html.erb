<div class="container-fluid">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">Log in</div>
        <div class="panel-body">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.input :email, required: true, autofocus: true , placeholder: "Enter your Verified E-mail Address"%>
    <%= f.input :password, required: true, placeholder: "Enter your Password"%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>


    <%= f.button :submit, "Log in", class: "btn btn-lg btn-theme" %>
  
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>
