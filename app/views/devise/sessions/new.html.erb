<div class="container">
  <div class="featured">
<h3 class="text-center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true , placeholder: "Enter your Verified E-mail Address"%>
    <%= f.input :password, required: true, placeholder: "Enter your Password"%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-lg btn-theme" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
